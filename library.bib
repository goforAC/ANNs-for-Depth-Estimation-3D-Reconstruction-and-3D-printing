isbn = {1469-7793 (Electronic)$\backslash$r0022-3751 (Linking)},
issn = {1469-7793},
journal = {The Journal of Physiology},
keywords = {Animals,Biological,Electric Stimulation,Male,Models,Motor Cortex,Motor Cortex: physiology,Presynaptic Terminals,Presynaptic Terminals: physiology,Rats,Synaptic Transmission,Wistar},
number = {Pt 10},
pages = {2563--2578},
