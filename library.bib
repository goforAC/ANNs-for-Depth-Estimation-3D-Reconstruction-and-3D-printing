isbn = {0022-3077},
issn = {1522-1598},
journal = {Journal of Neurophysiology},
number = {7},
pages = {1881--1889},
pmid = {22219028},
title = {{Contribution of axonal orientation to pathway-dependent modulation of excitatory transmission by direct current stimulation in isolated rat hippocampus.}},
