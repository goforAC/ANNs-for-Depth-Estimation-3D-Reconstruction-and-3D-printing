isbn = {0014-4886 (Print)$\backslash$n0014-4886 (Linking)},
issn = {00144886},
journal = {Experimental Neurology},
number = {6},
pages = {436--452},
pmid = {13882165},
title = {{Influence of transcortical d-c currents on cortical neuronal activity}},
volume = {5},
year = {1962}
