file = {:C$\backslash$:/Users/go{\_}fo/OneDrive/Documents/BA/Bibliography/6-Andrews{\_}2011{\_}Improving working memory - the effect of combining cognitive activity and anodal tDCS to the left DLPFC.pdf:pdf},
isbn = {1935-861X (Print)},
